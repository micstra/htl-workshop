{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "target/**/*",
    "src/**/*.vue",
    "src/locales/*.json",
    "node_modules/@types/node/globals.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "preserveValueImports": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "workshop-client/*": ["./target/*"]
    },
    "allowJs": true
  },
  "types": [
    "node",
    "lodash"
  ]
}
